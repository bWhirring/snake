{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015"
    ],
    "outDir": "./bin",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "declaration": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "./lib/**/*",
  ]
}
